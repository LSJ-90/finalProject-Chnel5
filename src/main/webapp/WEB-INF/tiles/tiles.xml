<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

   <!-- main -->
   <definition name="layout-tiles" template="/WEB-INF/tiles/base-layout.jsp">
       <put-attribute name="commonheader" value="/WEB-INF/tiles/commonheader.jsp" />
       <put-attribute name="body" value="" />
       <put-attribute name="footer" value="/WEB-INF/tiles/footer.jsp" />
   </definition>
  
   <definition name="*.tiles" extends="layout-tiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
   </definition>
   
   <definition name="*/*.tiles" extends="layout-tiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
   </definition>
   
   <definition name="*/*/*.tiles" extends="layout-tiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
   </definition>

   <!-- admin -->
   <definition name="layout-admintiles" template="/WEB-INF/tiles/adminbase-layout.jsp">
       <put-attribute name="adminheader" value="/WEB-INF/tiles/adminheader.jsp" />
       <put-attribute name="body" value="" />
       <put-attribute name="footer" value="/WEB-INF/tiles/footer.jsp" />
   </definition>
   
   <definition name="*.admintiles" extends="layout-admintiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
   </definition>
   <definition name="*/*.admintiles" extends="layout-admintiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
   </definition>
   <definition name="*/*/*.admintiles" extends="layout-admintiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
   </definition>
   
   <!-- host -->
   <definition name="layout-hosttiles" template="/WEB-INF/tiles/hostbase-layout.jsp">
       <put-attribute name="hostheader" value="/WEB-INF/tiles/hostheader.jsp" />
       <put-attribute name="body" value="" />
       <put-attribute name="footer" value="/WEB-INF/tiles/footer.jsp" />
   </definition>
  
   <definition name="*.hosttiles" extends="layout-hosttiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
   </definition>
   
   <definition name="*/*.hosttiles" extends="layout-hosttiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
   </definition>
   
   <definition name="*/*/*.hosttiles" extends="layout-hosttiles">
       <put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
   </definition>
  
</tiles-definitions>